---
import { Icon } from "astro-icon/components";
import CartItemTemplate from "./cart-item-template.astro";
---

<div data-controller="cart">
  <button
    class="relative flex items-center text-blue-200 hover:text-white mx-2"
    data-action="click->cart#openCart"
  >
    <Icon name="bag" size={24} />
    <span
      data-cart-target="count"
      class="absolute hidden first-letter:-top-2 left-3 bg-red-500 text-white text-sm rounded-full w-6 h-6 items-center justify-center"
    ></span>
  </button>
  <section
    data-cart-target="cartContainer"
    class="hidden absolute z-50 left-0 right-0 top-0 bottom-0 h-screen w-screen bg-black bg-opacity-50 justify-center items-center"
  >
    <aside class="bg-white absolute top-0 right-0 bottom-0 w-full lg:w-[450px]">
      <div class="fixed inset-y-0 right-0 max-w-full flex">
        <div class="w-screen max-w-md translate-x-0">
          <div
            class="h-full flex flex-col bg-white shadow-xl overflow-y-scroll"
          >
            <div class="flex-1 py-6 overflow-y-auto px-4 sm:px-6">
              <div class="flex items-start justify-between">
                <h2
                  class="text-lg font-medium text-gray-900"
                  id="headlessui-dialog-title-:r7:"
                  data-headlessui-state="open"
                >
                  Shopping cart
                </h2>

                <div class="ml-3 h-7 flex items-center">
                  <button
                    data-action="click->cart#closeCart"
                    type="button"
                    class="-m-2 p-2 text-gray-400 hover:text-gray-500"
                    tabindex="0"
                  >
                    <span class="sr-only">Close panel</span>
                    <Icon name="close" size={32} />
                  </button>
                </div>
              </div>

              <div class="mt-8">
                <div class="flow-root">
                  <ul
                    data-cart-target="itemList"
                    role="list"
                    class="-my-6 divide-y divide-gray-200"
                  >
                    <!-- Cart templates will be injected here -->
                  </ul>
                </div>
              </div>
            </div>
            <div
              data-cart-target="footer"
              class="border-t border-gray-200 py-6 px-4 sm:px-6"
            >
              <div
                class="flex justify-between text-base font-medium text-gray-900"
              >
                <p>Subtotal</p>
                <p data-cart-target="subTotal"></p>
              </div><p class="mt-0.5 text-sm text-gray-500">
                Shipping will be calculated at checkout.
              </p><div class="mt-6">
                <a
                  class="flex justify-center items-center px-6 py-3 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-primary-600 hover:bg-primary-700"
                  href="/checkout">Checkout</a
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </aside>
  </section>

  <template data-cart-target="emptyTemplate">
    <div class="mt-8">
      <div class="flex items-center justify-center h-48 text-xl text-gray-400">
        Your cart is empty
      </div>
    </div>
  </template>
  <CartItemTemplate />
</div>
