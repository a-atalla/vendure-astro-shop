---
import type { Collection, CollectionList } from "~/graphql/_generated";

type Props = {
  collections: Array<Collection>;
};

const { collections } = Astro.props;
---

<section>
  <div class="container mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      {
        collections.map((collection) => {
          return (
            <div class="bg-white shadow-md rounded-lg p-2 overflow-hidden">
              <a href={`/collections/${collection.slug}`}>
                <img
                  src={collection.featuredAsset?.preview}
                  alt="image"
                  class="cursor-pointer w-full h-48 object-cover object-center hover:scale-105 transition-transform duration-200"
                />
              </a>
              <div class="mt-4 text-center">
                <h2 class="text-lg text-gray-700 font-semibold">
                  {collection.name}
                </h2>
              </div>
            </div>
          );
        })
      }
    </div>
  </div>
</section>
